{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ZScript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.zscript",
					"match": "\\b(break|case|continue|do|else|for|if|return|switch|until|while)\\b"
				},
				{
					"name": "storage.type.zscript",
					"match": "\\b(enum|function|int|bool|void|ffc)\\b"
				},
				{
					"name": "support.function.zscript",
					"match": "\\b(Rand|Cos|Sin|Waitframe)\\b"
				},
				{
					"name": "support.type.zscript",
					"match": "\\b(ffc|global|generic|script)\\b"
				},
				{
					"name": "support.class.zscript",
					"match": "\\b(this|Link|Hero|Player|Screen|Game|Audio|Debug|NPCData|Text|ComboData|SpriteData|Input|Graphics|MapData|DMapData|MessageData|ShopData|DropData|PondData|WarpRing|DoorSet|MiscColors|MusicTrack|PalCycle|GameData|Cheats|FileSystem|Module|ZInfo|RandGen)\\b"
				},
				{
					"name": "constant.numeric.zscript",
					"match": "\\b(\\d+\\.?\\d?)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.zscript",
					"match": "//.*"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.zscript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.zscript",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.zscript"
}